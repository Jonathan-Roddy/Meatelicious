<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".food.Food1Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons1"
                    android:layout_width="354dp"
                    android:layout_height="96dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/recipeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="recipeTitle"
                        android:textAlignment="center"
                        android:textSize="40sp"
                        app:layout_constraintBottom_toBottomOf="@id/cons1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></TextView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="270dp"
                        tools:layout_editor_absoluteY="114dp"></androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons2"
                    android:layout_width="400dp"
                    android:layout_height="784dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cons1">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:elevation="15dp"
                        app:cardCornerRadius="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/recipeImageSmall"
                            android:layout_width="250dp"
                            android:layout_height="250dp"
                            android:layout_margin="8dp"></ImageView>

                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/recipeTitleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="recipeTitleSmall"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card1"></TextView>

                    <TextView
                        android:id="@+id/recipeTitleSmall5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/card1"></TextView>

                    <TextView
                        android:id="@+id/recipeDescription"
                        android:layout_width="376dp"
                        android:layout_height="98dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Text Description "
                        android:textSize="25sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipeDescriptionTitle"
                        app:layout_constraintVertical_bias="0.296"></TextView>

                    <TextView
                        android:id="@+id/recipeDescriptionTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="44dp"
                        android:layout_marginLeft="44dp"
                        android:layout_marginTop="24dp"
                        android:text="Description : "
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView8"></TextView>

                    <TextView
                        android:id="@+id/recipeAuthorTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="84dp"
                        android:layout_marginLeft="84dp"
                        android:layout_marginTop="16dp"
                        android:text="Author : "
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipeTitleSmall"></TextView>

                    <TextView
                        android:id="@+id/recipeAuthorTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="64dp"
                        android:layout_marginLeft="64dp"
                        android:layout_marginTop="16dp"
                        android:text="Difficulty : "
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipeAuthorTitle"></TextView>

                    <TextView
                        android:id="@+id/recipeAuthorTitle3"
                        android:layout_width="98dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="80dp"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="12dp"
                        android:text="Serves : "
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipeAuthorTitle2"></TextView>

                    <TextView
                        android:id="@+id/recipeAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="Author"
                        android:textSize="25sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/recipeAuthorTitle"
                        app:layout_constraintStart_toEndOf="@+id/recipeAuthorTitle"></TextView>

                    <TextView
                        android:id="@+id/recipeDifficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="Difficulty"
                        android:textSize="25sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/recipeAuthorTitle2"
                        app:layout_constraintStart_toEndOf="@+id/recipeAuthorTitle2"></TextView>

                    <TextView
                        android:id="@+id/recipeServes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="Serves"
                        android:textSize="25sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/recipeAuthorTitle3"
                        app:layout_constraintStart_toEndOf="@+id/recipeAuthorTitle3"></TextView>

                    <LinearLayout
                        android:id="@+id/lay1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="35dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipeDescription"
                        tools:layout_editor_absoluteX="0dp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="121dp"
                        android:layout_height="29dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="16dp"
                        android:text="PrepTime : "
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/recipeAuthorTitle3" />

                    <TextView
                        android:id="@+id/prepTime"
                        android:layout_width="96dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:text="TextView"
                        android:textSize="25sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView7"
                        app:layout_constraintStart_toEndOf="@+id/textView7" />

                    <TextView
                        android:id="@+id/cookTime"
                        android:layout_width="96dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="TextView"
                        android:textSize="25sp"
                        app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
                        app:layout_constraintStart_toEndOf="@+id/textView8" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="126dp"
                        android:layout_height="31dp"
                        android:layout_marginStart="52dp"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="16dp"
                        android:text="CookTime : "
                        android:textSize="25sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView7" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cons3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cons2">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="204dp"
                        android:layout_height="32dp"
                        android:layout_margin="15dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="2dp"
                        android:text="@string/ingred"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/listIngredients"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/listIngredients"
                        android:layout_width="380dp"
                        android:layout_height="196dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/listIngred"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_3" />

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="208dp"
                        android:layout_height="26dp"
                        android:layout_margin="15dp"
                        android:layout_marginStart="28dp"
                        android:layout_marginLeft="28dp"
                        android:layout_marginBottom="2dp"
                        android:text="@string/steps"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toTopOf="@+id/listSteps"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/listIngredients" />

                    <TextView
                        android:id="@+id/listSteps"
                        android:layout_width="381dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="@string/stepsList"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_4" />

                    <Button
                        android:id="@+id/TTS"
                        android:layout_width="148dp"
                        android:layout_height="34dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="Read Aloud"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_3" />

                    <Button
                        android:id="@+id/TTS3"
                        android:layout_width="145dp"
                        android:layout_height="41dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        android:text="Read Aloud"
                        app:layout_constraintBaseline_toBaselineOf="@+id/tv_4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_4" />


                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>